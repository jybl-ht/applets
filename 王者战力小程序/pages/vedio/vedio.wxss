/* pages/heroDetail/heroDetail.wxss */
.container {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #FFDEE9;
    background-image: linear-gradient(180deg, #FFDEE9 0%, #B5FFFC 100%);
    display: flex;
    justify-content: center;
}

.list {
    width: 100%;
    height: 40%;
    position: absolute;
    top: 25%;

    display: flex;
    justify-content: center;
    flex-direction: column;
}

.list .heroPic {
    width: 120rpx;
    height: 120rpx;
    margin: auto;
    margin-bottom: 100rpx;
}

.list .heroPic image {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.list .heroName {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}

.list .qufu {
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
}

.list .province {
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.list .city {
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.list .area {
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.type {
    display: flex;
    flex-wrap: wrap;
}

.type button {
    width: 50%;
    height: 80rpx;
}

.input {
    text-align: center;
    /* border: 1rpx solid #ca65b48e; */
}

.search {
    text-align: center;
    background-color: #FAACA8;
    background-image: linear-gradient(19deg, #FAACA8 0%, #DDD6F3 100%);
    width: 100%;
    height: 200rpx;
    line-height: 100rpx;
}

